
<h1>Add your wonderful restaurant below</h1>

<img src="https://i.ytimg.com/vi/Xv6LPr9MZg4/maxresdefault.jpg" width="100%">

<div class="restaurant-form">
  <%= form_tag "/restaurants" do %>
  <p>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </p>

  <p>
    <%= label_tag :address %><br />
    <%= text_field_tag :address %>
  </p>

  <p>
    <%= label_tag :cuisine %><br />
    <%= text_field_tag :cuisine %>
  </p>

  <p>
    <%= submit_tag "Join!" %>
  </p>
  <% end %>
</div>

