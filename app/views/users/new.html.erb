<h1>Please Enter Your Email To Complete Your Reservation!</h1>
<img src="https://cdn.theculturetrip.com/wp-content/uploads/2016/02/restaurant-939435_960_720.jpg" width="100%">

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class ="field">
    <%= f.label :name %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="actions"><%= f.submit %></div>
<% end %>
