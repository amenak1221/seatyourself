<div class="form">
  <%= form_for (@reserve) do |f|%>

  <!-- Number of people -->
  <div class="field">
    <%= f.label :number_of_people %>
    <%= f.text_field :people %>
  </div>

  <!-- Selecting date -->
  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <!-- drop down menu for restaurant -->
  <div class="field">
    <%= f.label :restaurants %>
    <%= f.collection_select(:restaurant_id, Restaurant.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  <% end %>

</div>
